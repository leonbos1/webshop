@model Leon.Webshop.Contracts.ViewModels.Products.IndexViewModel

<!--select dropdown with categories-->
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <div class="form-group">
        <label for="categoryId">Category</label>
        <select class="form-control" id="categoryId" name="categoryId">
            <option value="">All</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
}

<div class=" flex-md-wrap">
    @foreach (var product in Model.Products)
    {
        <div class="card-body border-1">
            <h5 class="card-title">@product.Name</h5>
            <p class="card-text">Price: $@product.Price</p>
            <p class="card-text">@product.Stock items in stock</p>
            <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary">Details</a>
        </div>
    }
</div>
